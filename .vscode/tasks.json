{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar C++ com g++",
      "type": "shell",
      "command": "g++",
      "args": [
        "-w",
        "-Iinclude",
        "-g",
        "src/*.cpp",
        "-o",
        "main.exe",
        "-Llib",
        "-lopengl32",
        "-lglu32",
        "-lfreeglut"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Tarefa para compilar o c√≥digo C++ com g++"
    }
  ],
  "inputs": [
    {
      "id": "sourceFile",
      "type": "promptString",
      "description": "Digite o nome do arquivo-fonte principal (ex: main.cpp)",
      "default": "src/main.cpp"
    }
  ]
}
